<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurantapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".StromboliActivity"></activity>
        <activity android:name=".SaladActivity" />
        <activity android:name=".AppetizerActivity" />
        <activity android:name=".DinnerActivity" />
        <activity android:name=".CurryOptionsActivity" />
        <activity android:name=".HotSandwichOptionsActivity" />
        <activity
            android:name=".SandwichOptionsActivity"
            android:label="@string/title_activity_sandwich_options"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".FinalizeOrderActivity" />
        <activity android:name=".PizzaOptionsActivity" />
        <activity android:name=".OrderActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>